<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventMap.Views.EventItemPage">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator 
                x:Name="ProgressBar"
                IsRunning="True"
                WidthRequest="90"
                HeightRequest="90"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Label Text="Название"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand" 
                   Margin="0, 16, 0, 0"
                   FontAttributes="Bold"
                   FontSize="24"
                   x:Name="TitleView" />
            <Label Text="Описание"
                   VerticalOptions="Start"
                   HorizontalOptions="Start" 
                   Padding="16, 8, 16, 0"
                   x:Name="Description" />
            <Label Text="Дата"
                   VerticalOptions="EndAndExpand"
                   Padding="16"
                   HorizontalOptions="Start" 
                   x:Name="Date" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>